{{#block "title"}}Het Systeem - Aanmelden{{/block}}

<form class="form-box w-50 mx-auto" method="POST" action="/auth/login">
	<h3>Aanmelden</h3>
	<div class="mt-3 mb-3">
		<label for="username" class="form-label">Gebruikersnaam:</label>
		<input type="text" class="form-control" id="username" name="username" required>
	</div>
	<div class="mt-3 mb-3">
		<label for="password" class="form-label">Wachtwoord:</label>
		<input type="password" class="form-control" id="password" name="password" required>
	</div>
	{{#if login_error}}
	<p class="alert alert-danger mt-3 mb-3 p-1">{{login_error}}</p>
	{{/if}}
	<div class="d-grid">
		<button type="submit" class="btn btn-primary btn-block">Aanmelden</button>
	</div>
	<p class="mt-3 mb-1">Nieuw lid? <a href="/auth/register">Registreren</a>.</p>
</form>