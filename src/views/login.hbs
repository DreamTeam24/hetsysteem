<div class="container-fluid mt-3">
	<h3>Inloggen</h3>
	<form method="POST" action="/login">
		<div class="mb-3 mt-3">
			<label for="username" class="form-label">Gebruikersnaam:</label>
			<input type="text" class="form-control" id="username" placeholder="Vul gebruikersnaam in" name="username" required>
		</div>
		<div class="mb-3">
			<label for="password" class="form-label">Wachtwoord:</label>
			<input type="password" class="form-control" id="password" placeholder="Vul wachtwoord in" name="password" required>
		</div>
		<button type="submit" class="btn btn-primary">Log in</button>
		{{#if message}}
			<div class="alert alert-danger m-0 p-1">
				{{message}}
			</div>
		{{/if}}
	</form>
</div>

